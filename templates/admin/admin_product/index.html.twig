{% extends 'admin/base.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row">

			{% include "_messages_flash.html.twig" %}

			<div class="col-12 d-flex align-items-center justify-content-between">
				<h3>Liste des produits</h3>
				<a class="btn btn-primary" href="{{ path('admin_product_new') }}">Ajouter</a>
			</div>

			<div class="navigation mt-3">
				{{ knp_pagination_render(products) }}
			</div>


			{% for product in products %}

				<div class="col-sm-12 col-md-6 col-lg-4 mt-3">

					<div class="card" style="width: 18rem;">
						<img src="{{ product.imagePath }}" class="card-img-top imageCardProduct" alt="image_product">
						<div class="card-body">
							<h5 class="card-title">{{ product.name | u.truncate('20', '...',false)}}</h5>
							<p>{{ product.price | priceEuro }}</p>
							<p>Cat√©gorie : {{ product.category }}</p>

							<a href="{{ path('admin_product_edit',{ 'id' : product.id} ) }}" class="btn btn-primary w-100">Manager</a>

						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
