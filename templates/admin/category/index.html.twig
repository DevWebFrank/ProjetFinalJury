{% extends 'admin/base.html.twig' %}

{% block title %}Liste des catégories
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row">

			{% include "_messages_flash.html.twig" %}

			<div class="col-12 d-flex align-items-center justify-content-between">
				<h1 class="h130px">Liste des catégories</h1>
				<a class="btn btn-primary" href="{{ path('admin_category_new') }}">Ajouter</a>
			</div>

			{% for category in categories %}

				<div class="col-sm-12 col-md-6 col-lg-4 my-3">
					<div class="card">
						<img src="{{ category.imagePath }}" class="card-img-top imgAdminCategory" alt="image_category">
						<div class="card-body">
							<h5 class="card-title">{{ category.name}}</h5>
							<a href="{{ path('admin_category_edit',{ 'id' : category.id} ) }}" class="btn btn-primary w-100">Manager</a>

						</div>
					</div>

				</div>

			{% endfor %}


		</div>
	</div>

{% endblock %}
