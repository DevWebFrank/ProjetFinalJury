{% extends 'admin/base.html.twig' %}

{% block title %}Edition Catégorie
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row">
			<div class="col-12">
				<h1 class="h130px">Edition d'une categorie</h1>

				<a class="btn btn-dark my-3" href="{{ path('admin_category_index') }}">
					<span class="btn-label">
						<i class="fa fa-chevron-left"></i>
					</span>Revenir à la liste
				</a>

			</div>

			<div class="col-sm-12 mt-3">

				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Modifier une catégorie</h5>
					</div>

					<div class="card-body">
						{{ include('admin/category/_form.html.twig', {'button_label': 'Modifier'}) }}

					</div>
				</div>

			</div>

			<div class="col-sm-12 mt-3">

				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Supprimer la catégorie</h5>
					</div>

					<div class="card-body">
						{{ include('admin/category/_delete_form.html.twig') }}

					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
