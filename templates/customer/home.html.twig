{% extends "base.html.twig" %}

{% block description %}
	Découvrez un large choix de maquillage pas cher, bio, nouveauté, cosmétique, soin du visage et du corps

{% endblock %}


{% block title %}Maquillage _ Beauty-shop | Offres | Super prix

{% endblock %}

{% block body %}
	<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div id="#" class="carousel-inner height_carrousel">

			<div class="carousel-item active img">
				<img src="{{ asset('assets/img/img_slider3.jpg') }}" class="d-block w-100 imageCarousel" alt="ambiance salon d'estheticienne">

			</div>

			<div class="carousel-item img">
				<img src="{{ asset('assets/img/img_slider4.jpg') }}" class="d-block w-100 imageCarousel" alt="Soins visage">

			</div>

			<div class="carousel-item img">
				<img src="{{ asset('assets/img/img_slider5.jpg') }}" class="d-block w-100 imageCarousel" alt="Produit estheticienne">


			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>


	<section class="bg-light">

		<div
			class="container py-5">
			<!-- LES CATEGORIES -->
			<div class="row">
				{% include "_messages_flash.html.twig" %}

				<div class="col-12">
					<h1 class="text-center">Les catégories</h1>
				</div>

				{% for category in categories %}

					<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
						<div class="card">
							<img src="{{ category.imagePath }}" class="card-img-top imageCategory" alt="image_category">
							<div class="card-body">
								<h5 class="card-title">{{ category.name|u.truncate('25', '...',false) }}</h5>

								<a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="btn btn-primary w-100">Consulter</a>

							</div>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</section>
	<!-- FIN DES CATEGORIES --
		>
	
		<section><!-- LES NOUVEAUTES -->
	<div class="container py-5">


		<div class="row">

			<div class="col-12">
				<h2 class="text-center">Les nouveautés</h2>
			</div>

			{% for product in products %}

				<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
					<div class="card">
						<img src="{{ product.imagePath }}" class="card-img-top imageCategory" alt="image_nouveaute">

						<div class="card-body">
							<h5 class="card-title">{{ product.name|u.truncate('25', '...',false) }}</h5>
							<p>{{ product.price | priceEuro }}</p>
							<a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-primary btn-sm mx-3">Consulter</a>
							<a class="btn btn-success btn-sm mx-3" href="{{ path('cart_add',{ 'id' : product.id }) }}?routeToRedirect=home">
								<i class="fa-solid fa-cart-plus"></i>
							</a>


						</div>
					</div>
				</div>

			{% endfor %}
		</div>
	</div>
</section>
<!-- FIN DES NOUVEAUTES -->{% endblock %}
