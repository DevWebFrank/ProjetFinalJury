{% extends "base.html.twig" %}

{% block title %}Projet Final
{% endblock %}

{% block body %}
	<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-indicators">
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
			<button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
		</div>
		<div id="#" class="carousel-inner height_carrousel">

			<div class="carousel-item active img">
				<img src="{{ asset('img/img_slider3.jpg') }}" class="d-block w-100 imageCarousel" alt="ambiance salon d'estheticienne">

			</div>

			<div class="carousel-item img">
				<img src="{{ asset('img/img_slider4.jpg') }}" class="d-block w-100 imageCarousel" alt="Soins visage">

			</div>

			<div class="carousel-item img">
				<img src="{{ asset('img/img_slider5.jpg') }}" class="d-block w-100 imageCarousel" alt="Produit estheticienne">


			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>


	<section
		class="bg-light">
		<!-- LES CATEGORIES -->
		<div class="container py-5">
			<div class="row">
				<div class="col-12">
					<h3 class="text-center">Les catégories</h3>
				</div>

				{% for category in categories %}

					<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
						<div class="card">
							<img src="{{ category.imagePath }}" class="card-img-top imageCard" alt="image_category">
							<div class="card-body">
								<h5 class="card-title">{{ category.name }}</h5>
								<a href="{{ path('boutique_product_show_by_category',{'id': category.id}) }}" class="btn btn-primary w-100">Consulter</a>

							</div>
						</div>
					</div>
				{% endfor %}
				
			</div>
		</div>
	</section>
	<!-- FIN LES CATEGORIES -->


	<section>
		<div
			class="container py-5">
			<!-- LES NOUVEAUTES -->

			<div class="row">
				<div class="col-12">
					<h3 class="text-center">Les nouveautés</h3>
				</div>

				{% for product in products %}

					<div class="col-sm-12 col-md-6 col-lg-4 mt-3">
						<div class="card">
							<img src="{{ product.imagePath }}" class="card-img-top imageCard" alt="image_nouveaute">
							<div class="card-body">
								<h5 class="card-title">{{ product.name }}</h5>
								<p>{{ product.price | priceEuro }}</p>
								<a href="{{ path('boutique_product_detail',{'id': product.id} ) }}" class="btn btn-primary w-100">Consulter</a>

							</div>
						</div>
					</div>

				{% endfor %}
			</div>
		</div>
	</section>
	<!-- FIN LES NOUVEAUTES -->


{% endblock %}



