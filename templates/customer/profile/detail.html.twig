{% extends "base.html.twig" %}

{% block body %}
	<div class="container py-5">

		<div class="row">
			{% include "_messages_flash.html.twig" %}
			<div class="col-sm-12 col-md-6">
				<div class="col-md-6">
					<div class="card">
						<a href="{{ path('profile_image_edit')}}">

							<img {% if (app.user.imagePath is same as null) or (app.user.imagePath is same as "") %} src="https://png.pngtree.com/png-vector/20190803/ourlarge/pngtree-avatar-user-basic-abstract-circle-background-flat-color-icon-png-image_1647265.jpg" {% else %} src="{{ app.user.imagePath }}" {% endif %} class="card-img-top imgprofile" alt="image_category">

						</div>
					</div>
				</a>


				<div class="card mt-3">
					<div class="card-header">
						<h5>Informations personnelles de Mr
							{{ app.user.name }}</h5>
					</div>
					<div class="card-body">
						<div class="row">
							<div class="col-6">
								<p>Prénom :
									{{ app.user.firstname }}</p>
							</div>
							<div class="col-6">
								<p>Nom :
									{{ app.user.name }}</p>
							</div>
						</div>
						<div class="row">
							<div class="col-6">
								<p>Email :
									{{ app.user.email }}</p>
							</div>
							<div class="col-6">
								<p>Téléphone :
									{{ app.user.telephone }}</p>
							</div>
						</div>
						<p>Adresse :
							{{ app.user.adresse }}</p>

						<p>Date de naissance :
							{{ app.user.birthday|date('d M Y') }}

					</div>
				</div>

			</div>

			<div class="col-sm-12 col-md-6">
				<div class="card mt-3">
					<div class="card-header">
						<h5>Configuration</h5>
					</div>
					<div class="card-body">
						<a href="{{ path('profile_purchase_list') }}" class="btn btn-secondary w-100">Mes commandes</a>
						<a href="{{ path('profile_image_edit') }}" class="btn btn-secondary w-100 mt-1">Modifier ma photo de profil</a>
						<a href="{{ path('profile_edit_info') }}" class="btn btn-secondary w-100 mt-1">Modifier mes infos personnelles</a>
						<a href="{{ path('profile_edit_password') }}" class="btn btn-danger w-100 mt-1">Changer mon mot de passe</a>
						<a href="{{ path('profile_contact_support') }}" class="btn btn-secondary w-100 mt-1">Contacter le support</a>

					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
