{% extends 'base.html.twig' %}

{% block title %}Contact support
{% endblock %}

{% block body %}
	<div class="container py-5">

		<div class="row">
			<div class="col-md-12 mb-3">
				<a class="btn btn-dark" href="{{ path('profile_detail') }}">Revenir au profil</a>
			</div>
			<div class="text-center">
				<h1 class="h125px card-title">Envoyer un email au support</h1>
			</div>

			<div class="d-flex justify-content-center mt-3">

				<div class="card col-md-8 mb-3">
					<div class="form-group">

						{{ form_start(form) }}

						<div class="bg-light p-3">
							<div class="row">
								<h5 class="card-title mt-2">Mes cordonn√©es</h5>

								<div class="form-group col-md-6">
									{{ form_row(form.prenom, {'attr': {'class': 'form-control'}}) }}
								</div>

								<div class="form-group col-md-6">
									{{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
								</div>
							</div>
							<div class="row">
								<div class="form-group col-md-6">
									{{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

								</div>
								<div class="form-group col-md-6">
									{{ form_row(form.telephone, {'attr': {'class': 'form-control'}}) }}

								</div>
							</div>
						</div>

						<div class="p-3">
							<div class="form-group col-md-6 mt-2">
								{{ form_row(form.subjectMessage) }}
							</div>

							<div class="form-group col-md-12">
								{{ form_row(form.contentMessage) }}
							</div>
							<div class="form-groupe d-flex justify-content-end">
								<button class="btn btn-primary mt-3" type="submit">Envoyer</button>
							</div>
							{{ form_end(form) }}
						</div>

					</div>
				</div>
			</div>

		</div>
	</div>

{% endblock %}
