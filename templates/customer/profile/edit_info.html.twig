{% extends 'base.html.twig' %}

{% block title %}Edition du profil
{% endblock %}

{% block body %}
	<div class="container d-flex justify-content-center py-5">

		<div class="row">
			<div class="col-12">
				<a class="btn btn-dark" href="{{ path('profile_detail') }}">Revenir au profil</a>
			</div>

			<div class="card col-md-12 mt-3">
				<div class="card-header">
					<h5 class="card-title">Modification du profil de
						{{ app.user.firstname }}</h5>
				</div>

				<div class="card-body">
					{{ form_start(form) }}
					{{ form_widget(form) }}
					<button class="btn btn-secondary mt-3" type="submit">Enregistrer</button>
					{{ form_end(form) }}
				</div>
				<div class="card-body">
					{# {{ form_start(form) }}
					{{ form_row(form.birthDay) }}
					{{ form_row(form.firstName) }}
					{{ form_row(form.name) }}
					{{ form_row(form.email) }}
					{{ form_row(form.telephone) }} 
					<button class="btn btn-secondary mt-3" type="submit">Enregistrer</button>
					{{ form_end(form) }} #}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
