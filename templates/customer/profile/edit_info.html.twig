{% extends 'base.html.twig' %}

{% block title %}Edit Info
{% endblock %}

{% block body %}
	<div class="container py-5">

		<div class="row">

			<div class="col-12 ">
				<a class="btn btn-dark" href="{{ path('profile_detail') }}">Revenir au profil</a>
			</div>

			<div class="col-sm-12 mt-3">
				<div class="card">
					<div class="card-header">
						<h5 class="card-title">Modification du profil de
							{{ app.user.name }}</h5>
					</div>

					<div class="card-body">
						{{ form_start(form) }}
						{{ form_widget(form) }} 
						{# {{ form_row(form.birthday) }}
						{{ form_row(form.firstname) }}
						{{ form_row(form.name) }}
						{{ form_row(form.email) }}
						{{ form_row(form.telephone) }}#}
						<button class="btn btn-secondary mt-3" type="submit">Enregistrer</button>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
