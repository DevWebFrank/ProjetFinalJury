{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">

			<div class="col-md-6">
				<h1 class="text-center fs-2">Réinitialiser votre mot de passe</h1>
				{{ form_start(resetForm) }}
				{{ form_row(resetForm.plainPassword) }}
				<button class="btn btn-primary mb-3">Réinitialiser</button>
				{{ form_end(resetForm) }}
			</div>
		</div>
	</div>

{% endblock %}
